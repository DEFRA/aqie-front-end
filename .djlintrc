{
  "include": ["**/*.html", "**/*.njk"],  // '' Specify file patterns to include
  "exclude": ["node_modules/**", "dist/**"],  // '' Specify file patterns to exclude
  "ignore": ["E001", "E002"],  // '' Ignore specific linting rules
  "reformat": true,  // '' Enable auto-formatting
  "indent": 2,  // '' Set the number of spaces for indentation
  "preserve_leading_space": true,  // '' Preserve leading spaces in template tags
  "preserve_blank_lines": true,  // '' Preserve blank lines in templates
  "profile": "django",  // '' Set the template profile (e.g., django, jinja, nunjucks)
  "require_valid_extension": false  // '' Allow files without valid extensions
}