{% extends 'layouts/page.njk' %}

{% block content %}
    <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop govuk-!-margin-top-8 language-toggle">
    <h1 class="govuk-heading-xl">{{heading}}</h1>
      <p class="govuk-body">{{paragraphs.a}}</p>

      <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
        <li>{{paragraphs.b}}</li>
        <li>{{paragraphs.c}}</li>
       <!-- That this is not required for the MVP <li>access the local authority website to find out what is being done to improve air quality</li> -->
      </ul>
      {%if lang == 'en' %}
      {% set queryhref %}/cy{% endset %}
      {{ govukInsetText({
        html: "<p class='govuk-body'>This page is also available <a class='govuk-link' href='" + queryhref + "'> in Welsh</a> (<a href='" + queryhref + "' hreflang='cy'>Cymraeg</a>).</p>",
        classes: "check-local-air-quality"
      }) }}
      {%endif%}
      {%if lang == 'cy'%}
      {% set queryhref %}/{% endset %}
      {{ govukInsetText({
        html: "<p class='govuk-body'>Mae'r dudalen hon hefyd ar gael <a class='govuk-link' href='" + queryhref + "'> yn Saesneg</a> (<a href='" + queryhref + "' hreflang='en'>English</a>).</p>",
        classes: "check-local-air-quality"
      }) }}
      {%endif%}
      {%if htmlLang == 'en'%}
      {% set queryhref %}/search-location?lang=en{% endset %}
      {{ govukButton({
        text: label,
        href: queryhref,
        isStartButton: true
      }) }}
      {%endif%}
      {%if htmlLang == 'cy'%}
       {% set queryhref %}/chwilio-lleoliad/cy?lang=cy{% endset %}
      {{ govukButton({
        text: label,
        href: queryhref,
        isStartButton: true
      }) }}
      {%endif%}
    </div>
  </div>  
{% endblock %}
