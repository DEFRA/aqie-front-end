{% extends 'layouts/page.njk' %}


{% block pageTitle %}
  {{pageTitle}}
{% endblock %}

{% block content %}
 {% call appPageBody() %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
  {% if errors %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
  {{ govukErrorSummary(errors) }}
    </div>
  </div>
  {% endif %}
    <h1 class="govuk-heading-xl">
      {{heading}}
    </h1>
    <p class="govuk-body-m">
      {{texts.a}} 
    </p>
    {% set queryhref %}/?userId={{ userId }}&utm_source={{utm_source}}{% endset %}
    <form name="login-air-quality" id="login-air-quality" action="{{queryhref}}" method="POST">
    <input type="hidden" name="userId" value="{{userId}}" /> 
    <input type="hidden" name="utm_source" value="{{utm_source}}" /> 
      {{ govukInput({
        label: {
          text:  texts.b,
          classes: "govuk-label"
        },
        classes: "govuk-!-width-one-third",
        id: "password",
        name: "password",
        type: "password",
        autocomplete: "current-password",
        errorMessage:errorMessage
      }) }}
      {{ govukButton({
        text:  texts.buttonText
      }) }}
     </form>
  </div>
</div>
  {% endcall %}
{% endblock %}