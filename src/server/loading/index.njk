{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="loading-page">
    <div class="loading-page__content">
  {% if lang == 'cy' %}
    {% set loadingHeading = 'Yn llwytho data ansawdd aer' %}
    {% set loadingBody = 'Rydym yn casglu gwybodaeth am ansawdd aer yn eich ardal.' %}
    {% set loadingStatus = 'Yn llwytho…' %}
  {% else %}
    {% set loadingHeading = 'Loading air quality data' %}
    {% set loadingBody = 'We are gathering air quality information for your area.' %}
    {% set loadingStatus = 'Loading…' %}
  {% endif %}

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ loadingHeading }}</h1>
          <p class="govuk-body">{{ loadingBody }}</p>
          
          <div class="loading-status" aria-live="polite" aria-atomic="true">
            <div class="loading-spinner" aria-hidden="true"></div>
            <p class="govuk-body loading-text">{{ loadingStatus }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .loading-spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #1d70b8;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 20px 0;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .loading-status {
      margin-top: 30px;
    }

    .loading-text {
      font-weight: bold;
      margin-top: 10px;
    }
  </style>

  <script>
    (function() {
      const lang = '{{ lang }}'
      const postcode = '{{ postcode }}'
      const statusUrl = '/loading-status'
      const maxPolls = 15 // 15 polls × 2s = 30s timeout
      let pollCount = 0

      const pollStatus = async () => {
        pollCount++

        if (pollCount > maxPolls) {
          // '' Timeout after 30 seconds, redirect to retry
          const retryUrl = `/retry?postcode=${encodeURIComponent(postcode)}&lang=${lang}`
          window.location.href = retryUrl
          return
        }

        try {
          const response = await fetch(statusUrl, {
            method: 'GET',
            headers: {
              'Accept': 'application/json'
            }
          })

          if (!response.ok) {
            throw new Error('Status check failed')
          }

          const data = await response.json()

          if (data.status === 'complete' && data.redirectTo) {
            // '' Processing complete, redirect to results
            window.location.href = data.redirectTo
            return
          }

          if (data.status === 'failed' && data.redirectTo) {
            // '' Processing failed, redirect to retry page
            window.location.href = data.redirectTo
            return
          }

          // '' Still processing, poll again in 2 seconds
          setTimeout(pollStatus, 2000)
        } catch (error) {
          console.error('Polling error:', error)
          // '' Error polling, try again
          setTimeout(pollStatus, 2000)
        }
      }

      // '' Start polling after 1 second
      setTimeout(pollStatus, 1000)
    })()
  </script>
{% endblock %}
