{% extends "govuk/template.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton -%}
{% from "govuk/components/table/macro.njk" import govukTable -%}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText -%}
{% from "govuk/components/details/macro.njk" import govukDetails -%}
{% from "govuk/components/input/macro.njk" import govukInput -%}
{% from "govuk/components/radios/macro.njk" import govukRadios -%}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}
{% from "tabs/macro.njk" import govukTabs %}
{% from "pollutant/macro.njk" import appPollutant %}
{% from "search/macro.njk" import appSearch -%}
{% from "language-toggle/macro.njk" import dwpLanguageToggle %}
{% from "footer/macro.njk" import govukFooterWelsh -%}
{% from "heading/macro.njk" import appHeading %}
{% from "macros/attributes.njk" import govukAttributes -%}
{% from "macros/logo.njk" import govukLogo -%}

{% set metaTitle = (pageTitle or 'Check air quality - GOV.UK') %}
{% set metaDescription = description | default('Check air quality in your local area and the air pollution forecast for the next 5 days. Also, get health advice to reduce your exposure to pollutants.') %}
{% set metaSiteUrl = (metaSiteUrl or 'https://check-air-quality.service.gov.uk') %}
{% set htmlLang = lang %}
{% block bodyStart %}
{% include "cookie-banner.njk" %}
{% endblock %}

{% block headIcons %}
  <link rel="icon" sizes="48x48" href="{{ getAssetPath("images/favicon.ico") }}">
  <link rel="icon" sizes="any" href="{{ getAssetPath("images/favicon.svg") }}" type="image/svg+xml">
  <link rel="mask-icon" href="{{ getAssetPath("images/govuk-icon-mask.svg") }}"
        color="{{ themeColor | default("#0b0c0c") }}"> {#- Hardcoded value of $govuk-black #}
  <link rel="apple-touch-icon" href="{{ getAssetPath("images/govuk-icon-180.png") }}">
{% endblock %}

{% block head %}
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{metaSiteUrl}}" />
  <meta property="og:title" content="{{metaTitle}}" />
  <meta property="og:description" content="{{metaDescription}}" />
  <meta name="description" content="{{metaDescription}}" />
  <meta name="google-site-verification" content="kK4-XyhL8lJqQ4AkkeB6GVwxm3NrhvUFt4g7TE1m7vc" />
  <link href="{{ getAssetPath('stylesheets/application.scss') }}" rel="stylesheet">
{% endblock %}

{% block header %}
 {# serviceName being used in govukHeader will be @deprecated in v6. It has moved to govukServiceNavigation - https://github.com/alphagov/govuk-frontend/blob/main/CHANGELOG.md#move-service-name-and-navigation-links-from-the-govuk-header-to-service-navigation-component #}
{% if page == "Check air quality" %}{% set serviceName = "" %}{% endif %}
{% if page != "home" %}
  {% if htmlLang == "en" %}
    {% set queryhref = "/" %}
    {{ govukHeader({
      homepageUrl: "https://www.gov.uk/",
      classes: "app-header",
      containerClasses: "govuk-width-container",
      serviceName: serviceName,
      serviceUrl: queryhref,
      useTudorCrown: true
    }) }}
  {% endif %}
  {% if htmlLang == "cy" %}
    {% set queryhref = "/cy" %}
    {{ govukHeader({
      homepageUrl: "https://www.gov.uk/",
      classes: "app-header",
      containerClasses: "govuk-width-container",
      serviceName: serviceName,
      serviceUrl: queryhref,
      useTudorCrown: true
    }) }}
  {% endif %}
{% endif %}
{% endblock %}
{% block pageTitle %}
  {{ pageTitle }}
{% endblock %}

{% block beforeContent %}
{% if page != "home" %}
  {% if notFoundUrl %}
    {% if (statusCode == '500') or (statusCode == '404') or (statusCode == '401') %}
      {{ govukPhaseBanner({
        tag: {
          text: phaseBanner.paragraphs.a
        },
        html: phaseBanner.paragraphs.b + " <a class='govuk-link' href='https://defragroup.eu.qualtrics.com/jfe/form/SV_dj4wJCoOkFQLXfM'>" + phaseBanner.paragraphs.c + " </a>" + phaseBanner.paragraphs.d
      }) }}
    {% endif %}
  {% else %}
    {{ govukPhaseBanner({
      tag: {
        text: phaseBanner.paragraphs.a
      },
      html: phaseBanner.paragraphs.b + " <a class='govuk-link' href='https://defragroup.eu.qualtrics.com/jfe/form/SV_dj4wJCoOkFQLXfM'>" + phaseBanner.paragraphs.c + " </a>" + phaseBanner.paragraphs.d
    }) }}

    {% if (page != "Check air quality") and (page != "Gwirio ansawdd aer") %}
      {% if displayBacklink %}
        {# '' Backlink logic handled below #}
      {% else %}
        {# '' Language toggle for health effects and actions-reduce-exposure pages #}
        {% if locationId %}
          {# '' Check page type to build correct URLs '' #}
          {% if page == 'Actions to reduce exposure' or page == 'Camau i leihau amlygiad' %}
            {# '' Actions to reduce exposure pages '' #}
            {% if locationName %}
              {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/actions-reduce-exposure?lang=en&locationName=" + (locationName | urlencode) %}
              {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/camau-lleihau-amlygiad/cy?lang=cy&locationName=" + (locationName | urlencode) %}
            {% else %}
              {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/actions-reduce-exposure?lang=en" %}
              {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/camau-lleihau-amlygiad/cy?lang=cy" %}
            {% endif %}
          {% else %}
            {# '' Health effects pages (default) '' #}
            {% if locationName %}
              {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/health-effects?lang=en&locationName=" + (locationName | urlencode) %}
              {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/effeithiau-iechyd?locationName=" + (locationName | urlencode) %}
            {% else %}
              {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/health-effects?lang=en" %}
              {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/effeithiau-iechyd" %}
            {% endif %}
          {% endif %}
        {% else %}
          {# '' Fallback for pages without locationId '' #}
          {% if page == 'Actions to reduce exposure' or page == 'Camau i leihau amlygiad' %}
            {% set fullHrefEn = "/actions-reduce-exposure?lang=en" %}
            {% set fullHrefCy = "/camau-lleihau-amlygiad/cy?lang=cy" %}
          {% else %}
            {% set fullHrefEn = "/health-effects?lang=en" %}
            {% set fullHrefCy = "/effeithiau-iechyd/cy" %}
          {% endif %}
        {% endif %}
        {% if statusCode != 500 %}
          {{
            dwpLanguageToggle({
              selectedLang: lang,
              href: {
                en: fullHrefEn,
                cy: fullHrefCy
              }
            })
          }}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endif %}
  {{ super() }}
  {% if page != "Check air quality" and displayBacklink %}
    {# '' Dynamic backlink block #}
    <div class='top-nav'>
      {% if customBackLink %}
        {{ govukBackLink({
          text: backLinkText,
          href: backLinkUrl
        }) }}
      {% else %}
        {% if htmlLang == "en" %}
          {% set queryhrefSearchEn %}/search-location?lang=en{% endset %}
          {{ govukBackLink({
            text: backlink.text,
            href: queryhrefSearchEn
          }) }}
        {% endif %}
        {% if htmlLang == "cy" %}
          {% set queryhrefSearchCy %}/chwilio-lleoliad/cy?lang=cy{% endset %}
          {{ govukBackLink({
            text: backlink.text,
            href: queryhrefSearchCy
          }) }}
        {% endif %}
      {% endif %}
      {# '' Language toggle for health effects and actions-reduce-exposure pages in backlink block #}
      {% if locationId %}
        {# '' Check page type to build correct URLs '' #}
        {% if page == 'Actions to reduce exposure' or page == 'Camau i leihau amlygiad' %}
          {# '' Actions to reduce exposure pages '' #}
          {% if locationName %}
            {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/actions-reduce-exposure?lang=en&locationName=" + (locationName | urlencode) %}
            {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/camau-lleihau-amlygiad/cy?lang=cy&locationName=" + (locationName | urlencode) %}
          {% else %}
            {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/actions-reduce-exposure?lang=en" %}
            {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/camau-lleihau-amlygiad/cy?lang=cy" %}
          {% endif %}
        {% else %}
          {# '' Health effects pages (default) '' #}
          {% if locationName %}
            {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/health-effects?lang=en&locationName=" + (locationName | urlencode) %}
            {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/effeithiau-iechyd?locationName=" + (locationName | urlencode) %}
          {% else %}
            {% set fullHrefEn = "/location/" + (locationId | urlencode) + "/health-effects?lang=en" %}
            {% set fullHrefCy = "/lleoliad/" + (locationId | urlencode) + "/effeithiau-iechyd" %}
          {% endif %}
        {% endif %}
      {% else %}
        {# '' Fallback for pages without locationId '' #}
        {% if page == 'Actions to reduce exposure' or page == 'Camau i leihau amlygiad' %}
          {% set fullHrefEn = "/actions-reduce-exposure?lang=en" %}
          {% set fullHrefCy = "/camau-lleihau-amlygiad/cy?lang=cy" %}
        {% else %}
          {% set fullHrefEn = "/health-effects?lang=en" %}
          {% set fullHrefCy = "/effeithiau-iechyd/cy" %}
        {% endif %}
      {% endif %}
      {{
        dwpLanguageToggle({
          selectedLang: lang,
          href: { en: fullHrefEn, cy: fullHrefCy }
        })
      }}
    </div>
  {% endif %}
  {% if lang == 'cy' %}
    {% set htmlLang = "cy" %}
  {% endif %}
{% endif %}
{% if (page != "home") and (page != "Check air quality") %}
  {% if lang == "en" %}
    {% set htmlLang = "en" %}
  {% elif lang == "cy" %}
    {% set htmlLang = "cy" %}
  {% else %}
    {% set htmlLang = "en" %}
  {% endif %}
{% endif %}
{% endblock %}

{% block content %}
  {# Layout: no global example tabs here â€” pages supply their own tabs. #}
{% endblock %}

{% block footer %}
  {% set privacyhref %}/privacy?lang={{htmlLang}}{% endset %}
  {% set cookieshref %}/cookies?lang={{htmlLang}}{% endset %}
  {% set accessibilityhref %}/accessibility?lang={{htmlLang}}{% endset %}
  {{ govukFooterWelsh({
    meta: {
      items: [
        {
          href: privacyhref,
          text: footerTxt.privacy
        },
        {
          href: cookieshref,
          text: footerTxt.cookies
        },
        {
          href: accessibilityhref,
          text: footerTxt.accessibility
        }
      ]
    },
    texts: footerTxt
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ getAssetPath('application.js') }}"></script>
{% endblock %}