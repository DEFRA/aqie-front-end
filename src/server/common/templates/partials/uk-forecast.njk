<h2 class="govuk-heading-m  govuk-!-margin-bottom-6">{{dailySummaryTexts.paragraphs.a}}</h2>
{% set todayHtml %}
<h3 class="aq-forecast-tabs__title govuk-heading-s govuk-!-margin-bottom-1">{{dailySummaryTexts.paragraphs.b}}</h3>
<p>{{ dailySummary.today }}</p>
{% endset -%}

{% set tomorrowHtml %}
<h3 class="aq-forecast-tabs__title govuk-heading-s govuk-!-margin-bottom-1">{{dailySummaryTexts.paragraphs.c}}</h3>
<p>{{ dailySummary.tomorrow }}</p>
{% endset -%}

{% set outlookHtml %}
<h3 class="aq-forecast-tabs__title govuk-heading-s govuk-!-margin-bottom-1">{{dailySummaryTexts.paragraphs.c}}</h3>
<p>{{ dailySummary.outlook }}</p>
{% endset -%}

{{ govukTabs({
    items: [
      {
        label: dailySummaryTexts.paragraphs.b,
        id: "today",
        panel: {
            html: todayHtml
        }
      },
      {
        label: dailySummaryTexts.paragraphs.c,
        id: "tomorrow",
        panel: {
            html: tomorrowHtml
        }
      },
      {
        label: dailySummaryTexts.paragraphs.d,
        id: "outlook",
        panel: {
            html: outlookHtml
        }
      }
    ]
  }) }}