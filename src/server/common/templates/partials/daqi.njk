{% set daqiValue = airQuality.today.value %}
  <h2 class="govuk-heading-m govuk-!-margin-bottom-6">{{daqi.paragraphs.a}} {{airQuality.today.readableBand | default('unknown')}}<span class="daqi-scale-hidden">, {{daqiValue}} {{daqi.paragraphs.b}}</span></h2>
  <div class="daqi-scale govuk-!-margin-bottom-7" role="img" aria-describedby="air-pollution-forecast-today" aria-hidden="true">
  <div class="daqi-bar">
    {% for i in range(1, 11) %}
        {% if i <= daqiValue %}
            <div class="daqi-bar-segment daqi-selected daqi-{{ daqiValue }}"></div>
        {% else %}
            <div class="daqi-bar-segment daqi-0"></div>
        {% endif %}
    {% endfor %}
  </div>
  <div class="daqi-labels">
    <span class="daqi-band">Low</span>
    <span class="daqi-band">Moderate</span>
    <span class="daqi-band">High</span>
    <span class="daqi-band">Very high</span>
  </div>


