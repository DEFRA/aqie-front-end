{% set daqiValue = airQuality.today.value %}
  <h2 class="govuk-heading-m govuk-!-margin-bottom-6">{{daqi.paragraphs.a}} <span class="govuk-visually-hidden"> on a scale of low to very high</span>{{airQuality.today.readableBand | default('unknown')}}<span class="daqi-scale-hidden">, {{daqiValue}} {{daqi.paragraphs.b}}</span></h2>
  <div class="daqi-scale govuk-!-margin-bottom-7" role="img" aria-hidden="true">
  <div class="daqi-bar">
    {% for i in range(1, 11) %}
        {% if daqiValue == i %}
            <div class="daqi-bar-segment daqi-selected daqi-{{ i }}">{{i}}</div>
        {% else %}
            <div class="daqi-bar-segment daqi-0">{{i}}</div>
        {% endif %}
    {% endfor %}
  </div>
  <div class="daqi-labels">
    <span class="daqi-band">Low</span>
    <span class="daqi-band">Moderate</span>
    <span class="daqi-band">High</span>
    <span class="daqi-band">Very high</span>
  </div>
</div>


