{% set daqiValue = airQuality.today.value %}
  <span class="govuk-caption-s govuk-!-margin-bottom-4">{{ daqi.heading }}</span>
  <div class="daqi-scale govuk-!-margin-bottom-7" role="img" aria-hidden="true">
  <div class="daqi-bar">
    {% for i in range(1, 11) %}
        {% if i <= daqiValue %}
            <div class="daqi-bar-segment daqi-selected daqi-{{ daqiValue }}"></div>
        {% else %}
            <div class="daqi-bar-segment daqi-0"></div>
        {% endif %}
    {% endfor %}
  </div>
  <div class="daqi-labels">
    <span class="daqi-band">{{daqi.levels.a}}</span>
    <span class="daqi-band">{{daqi.levels.b}}</span>
    <span class="daqi-band">{{daqi.levels.c}}</span>
    <span class="daqi-band">{{daqi.levels.d}}</span>
  </div>
</div>


