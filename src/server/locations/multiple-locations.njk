{% extends 'layouts/page.njk' %}
{% set displayBreadcrumbs = false %}
{% set title = "Locations matching 'millbrook'" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l">Locations matching '{{ userLocation }}'</h1>
    <p class="govuk-body">More than one match was found for your location. Choose the correct location from the following options:</p>

    {% for item in results %}
    <ul class="govuk-list govuk-!-margin-bottom-2">
      <li>
        <a href={{[serviceUrl, '/location/',item.GAZETTEER_ENTRY.ID] | join}} class="govuk-link">
        <mark>{{ item.GAZETTEER_ENTRY.NAME1 }}</mark>, 
        {% if item.GAZETTEER_ENTRY.COUNTY_UNITARY %}
          {{ item.GAZETTEER_ENTRY.COUNTY_UNITARY }}
        {% else %}
          {{ item.GAZETTEER_ENTRY.DISTRICT_BOROUGH }}
        {% endif %}
        </a>
      </li>
    </ul>
        {% endfor %}
    <p class="govuk-body govuk-!-margin-top-6">Alternatively, <a href={{[serviceUrl, '/search-location'] | join}}>try searching again</a></p>
  </div>
</div>
{% endblock %}
