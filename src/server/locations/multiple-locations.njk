{% extends 'layouts/page.njk' %}
{% set displayBreadcrumbs = false %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l">{{title}} '{{ userLocation }}'</h1>
    <p class="govuk-body">{{paragraphs.a}}</p>

    {% for item in results %}
    <ul class="govuk-list govuk-!-margin-bottom-2">
      <li>
        <a href={%if htmlLang == 'en' %}{{['/location/',item.GAZETTEER_ENTRY.ID, '?lang=en'] | join}}{%else%}{{['/lleoliad/cy/',item.GAZETTEER_ENTRY.ID, '?lang=cy'] | join}}{%endif%} class="govuk-link">
        {% if name2 %}  
        <mark>{{ name2 }}</mark>, 
        {% else %}
        <mark>{{ item.GAZETTEER_ENTRY.NAME1}}</mark>, 
        {% endif %}
        {% if item.GAZETTEER_ENTRY.COUNTY_UNITARY %}
          {{ item.GAZETTEER_ENTRY.COUNTY_UNITARY }}
        {% else %}
          {{ item.GAZETTEER_ENTRY.DISTRICT_BOROUGH }}
        {% endif %}
        </a>
      </li>
    </ul>
        {% endfor %}
    <p class="govuk-body govuk-!-margin-top-6">{{paragraphs.b}} <a href={% if htmlLang == 'en' %}'/search-location'{%else%}'/chwilio-lleoliad/cy'{%endif%}>{{paragraphs.c}}</a></p>
  </div>
</div>
{% endblock %}
