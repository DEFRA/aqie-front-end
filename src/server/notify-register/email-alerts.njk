{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set htmlLang = "en" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ heading }}</h1>
      
      <p class="govuk-body">{{ description }}</p>
      
      <p class="govuk-body">
        In the meantime, you can <a href="/notify/text-alerts" class="govuk-link">sign up for text message alerts</a> instead.
      </p>
      
      <div class="govuk-inset-text">
        We'll update this page when email alerts become available.
      </div>
      
      {{ govukButton({
        text: "Sign up for text alerts instead",
        href: "/notify/text-alerts",
        classes: "govuk-button--secondary"
      }) }}
      
    </div>
  </div>
{% endblock %}
