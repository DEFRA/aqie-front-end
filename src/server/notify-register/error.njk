{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set htmlLang = "en" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      
      <h1 class="govuk-heading-l">{{ heading }}</h1>
      
      {% if description %}
        <p class="govuk-body">{{ description }}</p>
      {% endif %}

      <p class="govuk-body">You can:</p>
      
      <ul class="govuk-list govuk-list--bullet">
        <li><a href="/notify/text-alerts" class="govuk-link">try signing up for text alerts again</a></li>
        <li><a href="/" class="govuk-link">return to the home page</a></li>
      </ul>

      <h2 class="govuk-heading-m">Get help</h2>
      
      <p class="govuk-body">
        If you continue to have problems, you can contact our support team.
      </p>
      
    </div>
  </div>
{% endblock %}
