{% extends 'layouts/page.njk' %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form class="form" action="/notify/register/sms-send-new-code" method="post" novalidate>
      {% if error %}
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
          </h2>
          <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
              <li>
                <a href="#mobile-number-new">{{ error.message }}</a>
              </li>
            </ul>
          </div>
        </div>
      {% endif %}

      <h1 class="govuk-heading-l">Request a new activation code</h1>
      <p class="govuk-body">
        Text messages sometimes take a few minutes to arrive. If you do not receive the text message, you can request a new one.
      </p>

      <div class="govuk-!-padding-bottom-5"></div>

      <details class="govuk-details" open="">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            Change where the text is sent
          </span>
        </summary>
        <div class="govuk-details__text">
          <div class="govuk-form-group{% if error and error.field === 'mobileNumberNew' %} govuk-form-group--error{% endif %}">
            <label class="govuk-label" for="mobile-number-new">
              Mobile number
            </label>
            {% if error and error.field === 'mobileNumberNew' %}
              <p id="mobile-number-new-error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> {{ error.message }}
              </p>
            {% endif %}
            <input class="govuk-input govuk-input--width-20{% if error and error.field === 'mobileNumberNew' %} govuk-input--error{% endif %}" 
                   id="mobile-number-new" 
                   name="mobileNumberNew" 
                   type="tel"
                   autocomplete="tel"
                   {% if error and error.field === 'mobileNumberNew' %}aria-describedby="mobile-number-new-error"{% endif %}
                   value="{% if formData and formData.mobileNumberNew %}{{ formData.mobileNumberNew }}{% endif %}">
          </div>
        </div>
      </details>

      <button type="submit" class="govuk-button" data-module="govuk-button">
        Request a new code
      </button>
    </form>
  </div>
</div>
{% endblock %}
