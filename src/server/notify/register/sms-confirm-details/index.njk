{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds odd-page">
      {# '' Error summary for duplicate alerts #}
      {% if duplicateAlertError %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [
            {
              text: duplicateAlertError.summary,
              href: "#"
            }
          ]
        }) }}
      {% endif %}

      <form class="form" action="/notify/register/sms-confirm-details" method="post" novalidate>
        <h1 class="govuk-heading-l">{{ heading }}</h1>
        
        <p class="govuk-body">{{ content.description }}</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>{{ forecastAlert }}</li>
          <li>{{ monitoringAlert }}</li>
        </ul>

        {# '' Summary list showing mobile number and location with change links #}
        {{ govukSummaryList({
          rows: [
            {
              key: {
                text: content.summaryList.mobileLabel
              },
              value: {
                text: mobileNumber
              },
              actions: {
                items: [
                  {
                    href: "/notify/register/sms-mobile-number",
                    text: content.summaryList.changePhoneText,
                    visuallyHiddenText: content.summaryList.changePhoneHidden
                  }
                ]
              }
            },
            {
              key: {
                text: content.summaryList.locationLabel
              },
              value: {
                text: location
              },
              actions: {
                items: [
                  {
                    href: "/search-location?notificationFlow=sms",
                    text: content.summaryList.changeLocationText,
                    visuallyHiddenText: content.summaryList.changeLocationHidden
                  }
                ]
              }
            }
          ]
        }) }}

        <button type="submit" class="govuk-button" data-module="govuk-button">
          {{ content.continueButton }}
        </button>
      </form>
    </div>
  </div>
{% endblock %}
