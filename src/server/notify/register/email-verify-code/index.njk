{% extends 'layouts/page.njk' %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if error %}
        <div class="govuk-error-summary" role="alert" aria-labelledby="error-summary-title" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
          <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
              <li><a href="#emailVerifyCode">{{ error.message }}</a></li>
            </ul>
          </div>
        </div>
      {% endif %}

      <h1 class="govuk-heading-l">{{ heading }}</h1>
      <p>We sent a 5-digit code to <b>{{ emailAddress }}</b>.</p>
      {% if debugToken %}
        <p class="govuk-hint">(Developer hint: code is <b>{{ debugToken }}</b>)</p>
      {% endif %}
      <form method="post" novalidate>
        <div class="govuk-form-group {% if error %}govuk-form-group--error{% endif %}">
          <label class="govuk-label" for="emailVerifyCode">Enter code</label>
          {% if error %}<p id="emailVerifyCode-error" class="govuk-error-message"><span class="govuk-visually-hidden">Error:</span> {{ error.message }}</p>{% endif %}
          <input class="govuk-input govuk-input--width-10" id="emailVerifyCode" name="emailVerifyCode" type="text" inputmode="numeric" pattern="[0-9]*" value="{{ formData.emailVerifyCode }}" />
        </div>
        <button class="govuk-button" data-module="govuk-button">Continue</button>
      </form>
      <p class="govuk-body"><a class="govuk-link" href="/notify/register/email-send-activation">Resend the code</a></p>
      <p class="govuk-body"><a class="govuk-link" href="/">Cancel and return to home</a></p>
    </div>
  </div>
{% endblock %}
