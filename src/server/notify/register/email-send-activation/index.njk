{% extends 'layouts/page.njk' %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form class="form" action="/notify/register/email-send-activation" method="post">
    <h1 class="govuk-heading-l">
      We are going to send you an activation link
    </h1>
    <p>We will send an email to <b>{{ emailAddress }}</b> with an activation link.</p>
<button type="submit" class="govuk-button govuk-button--primary govuk-!-margin-bottom-8" data-module="govuk-button" data-govuk-button-init="">
  Agree and continue
</button>
    <div>
        <a href="/notify/register/email-details">I want to use a different email address</a>
    </div>
    </form>
  </div>
</div>
{% endblock %}
