{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form class="form" action="/notify/register/sms-mobile-number" method="post" novalidate>
        {% if error %}
          <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
              There is a problem
            </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                <li>
                  <a href="#notify-by-text">{{ error.message }}</a>
                </li>
              </ul>
            </div>
          </div>
        {% endif %}

        <h1 class="govuk-heading-l">What is your mobile phone number?</h1>
        <p>We will send you a text message with a 5-digit activation code.</p>

        <div class="govuk-form-group{% if error and error.field === 'notifyByText' %} govuk-form-group--error{% endif %}">
          <label class="govuk-label" for="notify-by-text">
            Enter your mobile phone number
          </label>
          {% if error and error.field === 'notifyByText' %}
            <p id="notify-by-text-error" class="govuk-error-message">
              <span class="govuk-visually-hidden">Error:</span> {{ error.message }}
            </p>
          {% endif %}
          <input class="govuk-input govuk-input--width-20{% if error and error.field === 'notifyByText' %} govuk-input--error{% endif %}" 
                 id="notify-by-text" 
                 name="notifyByText" 
                 type="tel" 
                 autocomplete="tel"
                 {% if error and error.field === 'notifyByText' %}aria-describedby="notify-by-text-error"{% endif %}
                 value="{% if formData and formData.notifyByText %}{{ formData.notifyByText }}{% endif %}">
        </div>

        <button type="submit" class="govuk-button" data-module="govuk-button">
          Continue
        </button>
      </form>
    </div>
  </div>
{% endblock %}