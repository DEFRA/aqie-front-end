{% extends 'layouts/page.njk' %}

{% block content %}
{% set successNotificationBannerHtml %}
  <p class="govuk-notification-banner__heading">Youâ€™ve set your cookie preferences.</p>
{% endset %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="app-cookies-page" data-module="app-cookies-page">

      {{ govukNotificationBanner({
        type: "success",
        html: successNotificationBannerHtml,
        classes: "js-cookies-page-success",
        attributes: {
          hidden: ""
        }
      }) }}

      <h1 class="govuk-heading-xl">{{title}}</h1>
      <p class="govuk-body">{{paragraphs.w}} <a href="/" class="govuk-link">{{paragraphs.a}}</a> {{paragraphs.b}}</p>

      <p class="govuk-body">{{paragraphs.c}}</p>

      <p class="govuk-body">{{paragraphs.d}}</p>

      <p class="govuk-body">{{paragraphs.e}} <a href="https://ico.org.uk/for-the-public/online/cookies" class="govuk-link">{{paragraphs.f}}</a> {{paragraphs.g}}</p>

      <form class="js-cookies-page-form">

        <h2 class="govuk-heading-m">{{headings.a}}</h2>

        <p class="govuk-body">{{paragraphs.h}}</p>

        {{ govukTable({
          firstCellIsHeader: true,
          caption: table1.title,
          head: [
            { text: table1.text1 },
            { text: table1.text2},
            { text: table1.text3}
          ],
          rows: [
            [
              {text: table1.text4},
              {text: table1.text5},
              {text: table1.text6}
            ]
          ]
        }) }}

        <h2 class="govuk-heading-m">{{headings.b}}</h2>

        <p class="govuk-body">{{paragraphs.i}}</p>

        <p class="govuk-body">{{paragraphs.j}}</p>

        <p class="govuk-body">{{paragraphs.k}}</p>

        <p class="govuk-body">{{paragraphs.l}}</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>{{paragraphs.m}}</li>
          <li>{{paragraphs.n}}</li>
          <li>{{paragraphs.o}}</li>
          <li>{{paragraphs.p}}</li>
          <li>{paragraphs.q}</li>
        </ul>
        {{ govukTable({
          firstCellIsHeader: true,
          caption: headings.c,
          head: [
            { text: table2.text1 },
            { text: table2.text2 },
            { text: table2.text3 }
          ],
          rows: [
            [
              { text: "_ga" },
              { text: table2.text4 },
              { text: table2.text5 }
            ],
            [
              { text: "_gid" },
              { text: table2.text7 },
              { text: table2.text8 }
            ],
            [
              { text: "_gat_UA-[G-8CMZBTDQBC]" },
              { text: table2.text9 },
              { text: table2.text10 }
            ]
          ]
        }) }}

        {{ govukRadios({
          name: "cookies[analytics]",
          idPrefix: "cookies-analytics",
          fieldset: {
            legend: {
              text: headings.d,
              classes: "govuk-fieldset__legend--s"
            },
            classes: "js-cookies-page-form-fieldset",
            attributes: {
              "data-cookie-type": 'analytics',
              hidden: ""
            }
          },
          items: [
            {
              text: paragraphs.r,
              value: "yes"
            },
            {
              text: paragraphs.s,
              value: "no"
            }
          ]
        }) }} 

        {{ govukButton({
          text: paragraphs.buttonText,
          classes: "js-cookies-form-button",
          attributes: {
            hidden: ""
          }
        }) }}
      </form>
    </div>
  </div>
</div>
{% endblock %}